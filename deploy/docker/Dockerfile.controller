# Neuro-Swarm Evolution Controller
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY pyproject.toml ./
COPY neuro_swarm/ ./neuro_swarm/

# Install the package with database support
RUN pip install --no-cache-dir -e ".[dev,database]" redis

# Health check endpoint
EXPOSE 8080

# Environment variables (can be overridden)
ENV REDIS_HOST=redis \
    REDIS_PORT=6379 \
    ALGORITHM=map_elites \
    POPULATION_SIZE=50 \
    MAX_GENERATIONS=1000 \
    SIMULATION_STEPS=300 \
    POSTGRES_HOST=timescaledb \
    POSTGRES_PORT=5432 \
    POSTGRES_DB=neuro_swarm \
    POSTGRES_USER=postgres \
    POSTGRES_PASSWORD="" \
    DB_PERSISTENCE_ENABLED=true

# Run the controller with shell to expand env vars
# Database args read from environment variables automatically
CMD python -m neuro_swarm.services.controller \
    --redis-url redis://${REDIS_HOST}:${REDIS_PORT} \
    --algorithm ${ALGORITHM} \
    --population-size ${POPULATION_SIZE} \
    --generations ${MAX_GENERATIONS}
